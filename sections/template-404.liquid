{% if section.settings.button_url == blank %}
    {% assign shop_url = shop.url %}
{% else %}
    {% assign shop_url = section.settings.button_url %}    
{% endif %}
<h1 class="inline-block font-bold text-5xl my-4">{{ section.settings.title }}</h1>
<p class="text-base md:text-xl leading-normal">{{ section.settings.sub_title }}</p>
<div class="my-4">
    <a class="px-4 inline-block py-2 font-medium shadow bg-black text-white w-fit m-auto hover:bg-green" href="{{ shop_url }}">{{ section.settings.button_label }}</a>
</div>
{% schema %}
    {
        "name": "Template 404",
        "tag": "section",
        "class": "flex flex-col item-center justify-center text-center py-7 h-screen",
        "settings":[
            {
                "type": "text",
                "id": "title",
                "default": "404 Page",
                "label": "404 Heading Title"
            },
            {
                "type": "textarea",
                "id": "sub_title",
                "default": "The page you are looking for not found!",
                "label": "404 Sub Title"
            },
            {
                "type": "text",
                "id": "button_label",
                "default": "Back to home page",
                "label": "Button Label"
            },
            {
                "type": "url",
                "id": "button_url",
                "label": "Button url"
            }
        ]
    }
{% endschema %}