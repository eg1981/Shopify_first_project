<h1>{{ article.title }}</h1>
{% if section.settings.enable_author %}
    <small>{{ article.author }}</small>
{% endif %}
{% if section.settings.enable_publish %}
    <time>{{ article.published_at | date: '%d/%m/%y' }}</time>
{% endif %}
<img src="{{ article.image | img_url: 'large' }}" loading="lazy" alt="{{ article.image.alt }}">
<div>{{ article.content }}</div>

{% schema %}
    {
        "name": "Template Article",
        "tag": "section",
        "settings": [
            {
                "type": "checkbox",
                "id": "enable_author",
                "default": true,
                "label": "Enable Author Name"
            },
            {
                "type": "checkbox",
                "id": "enable_publish",
                "default": true,
                "label": "Enable Publish Name"
            }            
        ]
    }
{% endschema %}